<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_press" /> <!-- Ubah warna background saat ditekan -->
            <corners android:radius="8dp" /> <!-- Ubah corner radius sesuai keinginan -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_default" /> <!-- Ubah warna background default -->
            <corners android:radius="8dp" /> <!-- Ubah corner radius sesuai keinginan -->
        </shape>
    </item>
</selector>